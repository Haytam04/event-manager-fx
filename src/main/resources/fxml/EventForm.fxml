<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventmanager.controller.EventFormController"
      style="-fx-padding: 30; -fx-background-color: white;">

    <Label text="Event Details" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <TextField fx:id="txtTitle" promptText="Event Title" />
    <TextField fx:id="txtLocation" promptText="Location" />
    <HBox spacing="10">
        <TextField fx:id="txtImageUrl" promptText="Image Path" editable="false" HBox.hgrow="ALWAYS" />
        <Button text="Browse" onAction="#handleSelectImage" />
    </HBox>
    <Spinner fx:id="spinMaxParticipants" editable="true" prefWidth="200" />
    <DatePicker fx:id="datePicker" promptText="Select Date" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#handleCancel" />
    </HBox>
</VBox>