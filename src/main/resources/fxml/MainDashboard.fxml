<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.eventmanager.controller.DashboardController">
    <top>
        <HBox spacing="20" style="-fx-background-color: #333; -fx-padding: 15;" alignment="CENTER_LEFT">
            <Label text="Event Management System" style="-fx-text-fill: white; -fx-font-size: 18;" />
            <Region HBox.hgrow="ALWAYS" />

            <Button text="+ Add New Event" onAction="#handleAddEvent"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Label fx:id="lblWelcome" style="-fx-text-fill: white;" />
            <Button text="Logout" onAction="#handleLogout" />
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #eee;">
            <FlowPane fx:id="eventFlowPane" hgap="20" vgap="20" style="-fx-padding: 20;" />
        </ScrollPane>
    </center>
</BorderPane>
